FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
WORKDIR /src
COPY ["Code/dotnetbackend - 1.Api/dotnetbackend - 1.Api.csproj", "Code/dotnetbackend - 1.Api/"]
COPY ["Code/dotnetbackend - 1.Business/dotnetbackend - 1.Business.csproj", "Code/dotnetbackend - 1.Business/"]
COPY ["Code/dotnetbackend - 1.Data/dotnetbackend - 1.Data.csproj", "Code/dotnetbackend - 1.Data/"]
COPY ["Code/dotnetbackend - 1.Entities/dotnetbackend - 1.Entities.csproj", "Code/dotnetbackend - 1.Entities/"]
COPY ["Code/dotnetbackend - 1.Test.Api/dotnetbackend - 1.Test.Api.csproj", "Code/dotnetbackend - 1.Test.Api/"]
COPY ["Code/dotnetbackend - 1.Test.Business/dotnetbackend - 1.Test.Business.csproj", "Code/dotnetbackend - 1.Test.Business/"]
RUN dotnet restore "Code/dotnetbackend - 1.Api/dotnetbackend - 1.Api.csproj"
COPY . .
WORKDIR "/src/Code/dotnetbackend - 1.Api"
RUN dotnet build "dotnetbackend - 1.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "dotnetbackend - 1.Api.csproj" -c Release -o /app/publish

WORKDIR /src
RUN dotnet test --results-directory /testresults --logger "trx;LogFileName=testresults.Api.trx" /p:CollectCoverage=true /p:CoverletOutputFormat=cobertura /p:CoverletOutput=/testresults/coverage/ /p:MergeWith=/testresults/coverage/coverage.json "Code/dotnetbackend - 1.Test.Api/dotnetbackend - 1.Test.Api.csproj"
RUN dotnet test --results-directory /testresults --logger "trx;LogFileName=testresults.Api.trx" /p:CollectCoverage=true /p:CoverletOutputFormat=cobertura /p:CoverletOutput=/testresults/coverage/ /p:MergeWith=/testresults/coverage/coverage.json "Code/dotnetbackend - 1.Test.Business/dotnetbackend - 1.Test.Business.csproj"
